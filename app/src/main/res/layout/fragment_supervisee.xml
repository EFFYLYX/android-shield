        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:paddingBottom="20dp">



            <android.support.v7.widget.CardView
                android:layout_margin="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/ll_not_start"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Haven't Started"
                        android:textColor="@color/background_gray"

                        android:textSize="30sp"/>
                </LinearLayout>



                <LinearLayout
                    android:padding="10dp"

                    android:id="@+id/ll_in_trip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Depature: "

                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/et_departure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="              "
                            android:padding="5dp"

                            android:textSize="17sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Destination: "

                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/et_destination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="              "
                            android:padding="5dp"

                            android:textSize="17sp" />


                    </LinearLayout>

                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/end_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Contact Him/Her"
                            android:textColor="@color/white"
                            android:background="@drawable/button_style"
                            />

                        <Button
                            android:layout_marginTop="5dp"
                            android:id="@+id/sos_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:background="@drawable/button_style"
                            android:text="SOS 110" />
                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>




        <LinearLayout
